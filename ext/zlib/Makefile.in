
include ../Makefile.common

top_srcdir = @top_srcdir@
ZLIB_DIR = zlib
SO = $(top_srcdir)/ext/zlib.$(SOEXT)
LIBS = -lz

OBJS = zlib.$(OBJEXT)

all: $(SO)

$(SO): $(OBJS)
	$(CC) -o $@ -shared $(LDFLAGS) $(OBJS) $(LIBS)

.c.o:
	$(CC) -o $@ $(CFLAGS) -c $<

Makefile: Makefile.in
	cd $(top_srcdir) && ./config.status ext/zlib/$@

clean:
	rm -f $(SO) $(OBJS) $(ZLIB_BIN)

install:
	$(install_sh_DATA) $(SO) $(libdir)


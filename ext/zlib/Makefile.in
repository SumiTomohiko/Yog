
include ../Makefile.common

top_srcdir = @top_srcdir@
ZLIB_DIR = zlib
ZLIB_BIN = $(ZLIB_DIR)/libz.a
SO = $(top_srcdir)/ext/zlib.$(SOEXT)

OBJS = zlib.$(OBJEXT)

all: $(SO)

$(SO): $(OBJS) $(ZLIB_BIN)
	$(CC) -o $@ -shared $(LDFLAGS) $(OBJS) $(ZLIB_BIN) $(LIBS)

$(ZLIB_BIN):
	cd $(ZLIB_DIR) && $(MAKE)

.c.o:
	$(CC) -o $@ $(CFLAGS) -I$(ZLIB_DIR) -c $<

Makefile: Makefile.in
	cd $(top_srcdir) && ./config.status ext/zlib/$@

clean:
	rm -f $(SO) $(OBJS) $(ZLIB_BIN)

install:
	$(install_sh_DATA) $(SO) $(libdir)



include ../Makefile.common

top_srcdir = @top_srcdir@
SO = $(top_srcdir)/ext/yaml.$(SOEXT)
SYCK_DIR = syck
SYCK_BIN = $(SYCK_DIR)/lib/libsyck.a

OBJS = yaml.$(OBJEXT)

all: $(SO)

$(SO): $(OBJS) $(SYCK_BIN)
	$(CC) -o $@ -shared $(LDFLAGS) $(OBJS) $(SYCK_BIN) $(LIBS)

$(SYCK_BIN):
	cd $(SYCK_DIR) && make

.c.o:
	$(CC) -o $@ -c $(CFLAGS) -I$(SYCK_DIR)/lib $<

Makefile: Makefile.in
	cd $(top_srcdir) && ./config.status ext/yaml/$@

clean:
	rm -f $(SO) $(OBJS)

install:
	$(install_sh_DATA) $(SO) $(libdir)


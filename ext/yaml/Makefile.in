
top_srcdir = @top_srcdir@
SOEXT = @SOEXT@
OBJEXT = @OBJEXT@
SO = $(top_srcdir)/ext/yaml.$(SOEXT)
SYCK_DIR = syck
SYCK_BIN = $(SYCK_DIR)/lib/libsyck.a
CC = @CC@
CFLAGS = @CFLAGS@ -I$(SYCK_DIR)/lib
LDFLAGS = @LDFLAGS@
LIBS = @IMPORT_LIB@

OBJS = yaml.$(OBJEXT)

all: $(SO)

$(SO): $(OBJS) $(SYCK_BIN)
	$(CC) -o $@ -shared $(LDFLAGS) $(OBJS) $(SYCK_BIN) $(LIBS)

$(SYCK_BIN):
	cd $(SYCK_DIR) && make

.c.o:
	$(CC) -o $@ -c $(CFLAGS) $<

Makefile: Makefile.in
	cd $(top_srcdir) && ./config.status ext/yaml/$@

clean:
	rm -f $(SO) $(OBJS)


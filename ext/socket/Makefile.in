
top_srcdir = @top_srcdir@
OBJEXT = @OBJEXT@
SOEXT = @SOEXT@
SO = $(top_srcdir)/ext/socket.$(SOEXT)
CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@ @IMPORT_LIB@

OBJS = socket.$(OBJEXT)

all: $(SO)

$(SO): $(OBJS)
	$(CC) -o $@ -shared $(LDFLAGS) $(OBJS) $(LIBS)

.c.o:
	$(CC) -o $@ -c $(CFLAGS) $<

Makefile: Makefile.in
	cd $(top_srcdir) && ./config.status ext/socket/$@

clean:
	rm -f $(SO) $(OBJS)


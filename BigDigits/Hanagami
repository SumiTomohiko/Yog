
def options(ctx):
    ctx.load("compiler_c")

configure = options

def build(ctx):
    target = "BigDigits"
    source = ["bigd.c", "bigdigits.c"]
    # This library causes many warnings. So I cannot pass -Werror.
    cflags = ["-Wall", "-O3", "-g"]
    ctx.stlib(**locals())


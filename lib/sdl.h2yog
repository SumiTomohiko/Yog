
from h2yog import h2yog

def main()
  yog = __FILE__.dirname / "sdl.yg"

  status, prefix, _ = run_command("/bin/sh", "-c", "sdl-config --prefix")
  if status != 0
    return 1
  end
  header = prefix.rtrim() / "include" / "SDL" / "SDL.h"

  h2yog(yog, [header], "SDL") do [path, sym]
    next (path =~ /\/SDL\//) != nil
  end
end

if __FILE__ == ARGV.get(0)
  main()
end


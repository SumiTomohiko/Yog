
string = ['string, DEFAULT_ENCODING]
oDB = StructClass.new("oDB", [
  [string, 'path],
  [['char, 256], 'msg],
  ['int, 'lock_file],
  ['int, 'next_doc_id],
  ['pointer, 'index],
  ['pointer, 'doc]])
oHits = StructClass.new("oHits", [
  ['int, 'num],
  [['int, 0], 'doc_id]])

lib = find_lib("o")
oDB_create = lib.load_func("oDB_create", [oDB, string], 'int)
oDB_init = lib.load_func("oDB_init", [oDB])
oDB_fini = lib.load_func("oDB_fini", [oDB])
oDB_open_to_read = lib.load_func("oDB_open_to_read", [oDB, string], 'int)
oDB_open_to_write = lib.load_func("oDB_open_to_write", [oDB, string], 'int)
oDB_close = lib.load_func("oDB_close", [oDB], 'int)
oDB_put = lib.load_func("oDB_put", [oDB, ['string, ENCODING["utf-8"]]], 'int)
oDB_get = lib.load_func("oDB_get", [oDB, 'int, 'int_p], 'int)
oDB_search = lib.load_func("oDB_search", [oDB, ['string, ENCODING["utf-8"]], 'pointer_p], 'int)

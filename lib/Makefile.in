
prefix = @prefix@
VERSION = @PACKAGE_VERSION@
DIR = $(prefix)/lib/yog/$(VERSION)

PKGS = hq9plus.yg optparse.yg peg.yg

install:
	mkdir -p $(DIR)
	for f in `find . -name "*.yg"`; \
	do \
		mkdir -p `dirname $(DIR)/$${f}`; \
		install --mode 644 $${f} $(DIR)/$${f}; \
	done



File.open(ARGV[1], "r") do [in]
  File.open(ARGV[2], "w") do [out]
    try
      while true
        line = in.readline()
        if line =~ /\A# vim:/
          continue
        end
        line = line.gsub("\n", "\\n")
        out.write("\"" + line + "\"\n")
      end
    except
    end
  end
end


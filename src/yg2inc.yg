
File.open(ARGV[1], "r") do [in]
  File.open(ARGV[2], "w") do [out]
    while true
      try
        line = in.readline()
      except
        break
      end
      if line =~ /\A# vim:/
        next
      end
      line = line.gsub("\\", "\\\\")
      line = line.gsub("\n", "\\n")
      line = line.gsub("\"", "\\\"")
      out.write("\"" + line + "\"\n")
    end
  end
end


inst call_function
(uint8_t argc, uint8_t kwargc, uint8_t blockargc, uint8_t varargc, uint8_t varkwargc)
(...) depth: argc + 2 * kwargc + blockargc + varargc + varkwargc
(...) depth: 1
{
    POP_ARGS(args, kwargs, blockarg, vararg, varkwarg);
    YogVal callee = POP();

    YogVal klass = YogVal_get_class(env, callee);
    YOG_ASSERT(env, PTR_AS(YogClass, klass)->exec, "uncallable");
    PTR_AS(YogClass, klass)->exec(env, callee, argc, args, blockarg, kwargc, kwargs, vararg, varkwarg);

    POP_LOCALS(env);
    POP_LOCALS(env);
    POP_LOCALS(env);
}

inst load_global
(ID id)
()
(val)
{
    YogVal globals = SCRIPT_FRAME(CUR_FRAME)->globals;
    if (!YogTable_lookup(env, globals, ID2VAL(id), &val)) {
        val = lookup_builtins(env, id);
    }
    if (IS_UNDEF(val)) {
        YogVal name = YogVM_id2name(env, env->vm, id);
        YogError_raise_NameError(env, "name '%s' is not defined", STRING_CSTR(name));
    }
}


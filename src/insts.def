inst store_attr
(ID name)
(obj, val)
()
{
    YogVal attr = YUNDEF;
    YogVal class_of_obj = YUNDEF;
    YogVal class_of_attr = YUNDEF;
    PUSH_LOCALS3(env, attr, class_of_obj, class_of_attr);

    class_of_obj = YogVal_get_class(env, obj);
    BOOL has_attrs;
    if (IS_PTR(obj) && ((PTR_AS(YogBasicObj, obj)->flags & HAS_ATTRS) != 0)) {
        has_attrs = TRUE;
    }
    else {
        has_attrs = FALSE;
    }

    if (has_attrs) {
        attr = YogObj_get_attr(env, obj, name);
    }
    if (IS_UNDEF(attr)) {
        attr = YogObj_get_attr(env, class_of_obj, name);
    }
    if (!IS_UNDEF(attr)) {
        class_of_attr = YogVal_get_class(env, attr);
        void (*exec)(YogEnv*, YogVal, YogVal, YogVal) = PTR_AS(YogClass, class_of_attr)->exec_set_descr;
        if (exec != NULL) {
            exec(env, attr, obj, val);
        }
        else if (has_attrs) {
            YogObj_set_attr_id(env, obj, name, val);
        }
        else {
            ID id = PTR_AS(YogClass, class_of_obj)->name;
            YogVal class_name = YogVM_id2name(env, env->vm, id);
            YogError_raise_AttributeError(env, "can't set attribute to '%s' object", STRING_CSTR(class_name));
        }
    }
    else if (has_attrs) {
        YogObj_set_attr_id(env, obj, name, val);
    }
    else {
        YogVal class_name = YUNDEF;
        YogVal attr_name = YUNDEF;
        PUSH_LOCALS2(env, class_name, attr_name);

        ID id = PTR_AS(YogClass, class_of_obj)->name;
        YogVM* vm = env->vm;
        class_name = YogVM_id2name(env, vm, id);
        attr_name = YogVM_id2name(env, vm, name);
        YogError_raise_AttributeError(env, "%s object has no attribute '%s'", STRING_CSTR(class_name), STRING_CSTR(attr_name));

        POP_LOCALS(env);
    }

    POP_LOCALS(env);
}

inst not
()
(val)
(b)
{
    if (YOG_TEST(val)) {
        b = YFALSE;
    }
    else {
        b = YTRUE;
    }
}

inst long_return
()
(val)
()
{
    YogVal frame = PTR_AS(YogThread, env->thread)->cur_frame;
    YogVal target_frame = PTR_AS(YogScriptFrame, frame)->frame_to_long_return;
    long_jump(env, val, JMP_RETURN, target_frame);
}

inst long_break
()
(val)
()
{
    YogVal frame = PTR_AS(YogThread, env->thread)->cur_frame;
    YogVal target_frame = PTR_AS(YogScriptFrame, frame)->frame_to_long_break;
    long_jump(env, val, JMP_BREAK, target_frame);
}


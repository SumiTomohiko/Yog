inst jump_if_false
(pc_t dest)
(val)
()
{
    YogValType type = VAL_TYPE(val);
    if ((type == VAL_NIL) || ((type == VAL_BOOL) && !VAL2BOOL(val))) {
        JUMP(dest);
    }
}


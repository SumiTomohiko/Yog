#!/usr/bin/env yog

from optparse import OptionParser
from ydoc import run

destdir = "."
title = ""

opt = OptionParser.new()
opt.on_option("d", "destdir") do [val]
  nonlocal destdir
  destdir = val
end
opt.on_option("t", "title") do [val]
  nonlocal title
  title = val
end
args = opt.parse(ARGV.slice(1))

run(title, destdir, args[0])


#!/usr/bin/env yog

from optparse import OptionParser
from ydoc import run

destdir = "."

opt = OptionParser.new()
opt.on_option("d", "destdir") do [val]
  nonlocal destdir
  destdir = val
end
args = opt.parse(ARGV.slice(1))

run(destdir, args[0])

